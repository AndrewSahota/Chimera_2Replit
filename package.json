
{
  "name": "chimera-trading-terminal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5000",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 5000",
    "start:terminal-api": "cd apps/terminal-api && npm start",
    "start:bot-equities": "cd apps/bot-equities && npm start",
    "start:risk-manager": "cd apps/risk-manager && npm start",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "backup": "chmod +x scripts/backup.sh && ./scripts/backup.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "axios": "^1.6.0",
    "ws": "^8.18.3",
    "zustand": "^4.4.7",
    "lucide-react": "^0.263.1",
    "tailwindcss": "^3.3.0",
    "@prisma/client": "^5.7.0",
    "prisma": "^5.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  }
}
