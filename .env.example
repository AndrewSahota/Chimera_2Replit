# Database Configuration
DATABASE_URL="postgresql://chimera_user:chimera_password@localhost:5432/chimera_db"

# Message Queue
RABBITMQ_URL="amqp://guest:guest@localhost:5672"
REDIS_URL="redis://localhost:6379"

# Trading Mode Configuration
TRADING_MODE=paper  # 'live', 'paper', or 'sim'

# Zerodha API Configuration (for equities)
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
ZERODHA_USER_ID=your_user_id
ZERODHA_PASSWORD=your_password
ZERODHA_TOTP_SECRET=your_totp_secret

# Binance API Configuration (for crypto)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Alpha Vantage (for market data)
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_api_key"

# Notification Services
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"
TELEGRAM_CHAT_ID="your_telegram_chat_id"

# Application Configuration
NODE_ENV="development"
PORT="5000"
API_PORT="3001"

# Trading Configuration
BROKER_MODE="sim" # Options: sim, paper, live
MAX_POSITION_SIZE="10000"
MAX_DAILY_LOSS="5000"
RISK_MANAGEMENT_ENABLED="true"

# Security
JWT_SECRET="your_jwt_secret_key"
ENCRYPTION_KEY="your_encryption_key"

# Monitoring
PROMETHEUS_ENABLED="true"
LOG_LEVEL="info"